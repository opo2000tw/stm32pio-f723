# @see https://editorconfig.org/ 

root = true

[Core/**/*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[lib/**/src/*.{c,h,cpp,hpp}]
end_of_line = crlf
charset = utf-8

[lib/**/inc/*.{c,h,cpp,hpp}]
end_of_line = crlf
charset = utf-8

[*.py]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.{md,MD}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[Makefile]
indent_style = tab